        <apex:pageMessages ></apex:pageMessages>	<!-- For Messages-->
        <apex:pageBlock title="Bulk Product" >
            <apex:pageBlockButtons >
            	<apex:commandButton value="Save" action="{!saveRecord}" rendered="{!!isEdit}" />
                <apex:commandButton value="Edit" action="{!editRecord}" rendered="{!isEdit}"/>
                <apex:commandButton value="Delete" action="{!deleteRecord}" rendered="{!isEdit}"/> 
                <apex:commandButton value="SaveAll" action="{!saveAll}" rendered="{!!isEdit}"/>
                <apex:commandButton value="AddRow" action="{!AddRow}" rendered="{!!isEdit}"/>
                <apex:commandButton value="RemoveRow" action="{!RemoveRow}" rendered="{!!isEdit}"/>
                
          <!--      <apex:commandButton value="DeleteRow" action="{!DeleteRow}" rendered="{!!isEdit}"/> -->
            </apex:pageBlockButtons>
        	<apex:pageBlockSection title="Input Product" collapsible="false" columns="1" rendered="{!!isEdit}">
            	<apex:pageBlockTable value="{!productList}" var="prod">
                	<apex:column headerValue="Product Title">
                    	<apex:inputField value="{!prod.Product_Name__c}" required="false" />
                    </apex:column>
                    <apex:column headerValue="Product Brand">
                    	<apex:inputField value="{!prod.Brand__c}" required="false" />
                    </apex:column>
                    <apex:column headerValue="Product Rate">
                    	<apex:inputField value="{!prod.Rate__c}" />
                    </apex:column>
                    <apex:column headerValue="Product Stock">
                    	<apex:inputField value="{!prod.Stock__c}" />
                    </apex:column>
                </apex:pageBlockTable>
            </apex:pageBlockSection>
       
        	<apex:pageBlockSection title="Bulk output Product" collapsible="false" columns="1"  rendered="{!isEdit}">
            	<apex:pageBlockTable value="{!productList}" var="prod">
                    <apex:column headerValue="Product ID" value="{!prod.Id}"></apex:column>
                	<apex:column headerValue="Product Title" value="{!prod.Product_Name__c}"></apex:column>
                    <apex:column headerValue="Product Brand" value="{!prod.Brand__c}"> </apex:column>
                    <apex:column headerValue="Product Rate" value="{!prod.Rate__c}"></apex:column>
                    <apex:column headerValue="Product Stock" value="{!prod.Stock__c}"></apex:column>
                </apex:pageBlockTable>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>