<apex:page controller="EmailController" sidebar="false" >
    <apex:sectionHeader title="Email Sent" />
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockButtons >
                <apex:commandButton value="Send" action="{!emailSendProcess}" />
            </apex:pageBlockButtons>
            <apex:pageBlockSection collapsible="false" columns="1"> 
                <apex:pageBlockSectionItem >
                    <apex:outputLabel >Enter Email Subject</apex:outputLabel>
                    <apex:inputText size="40" value="{!emailSubject}" />
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel >Enter To Address</apex:outputLabel>
                    <apex:inputText size="40" value="{!addressSent}" />
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel >Enter To CCAddresst</apex:outputLabel>
                    <apex:inputText size="40" value="{!CCAddress}" />
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel >Enter Email Body</apex:outputLabel>
                    <apex:inputTextarea rows="10" cols="40" value="{!EmailBody}" />
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel >Choose File</apex:outputLabel>
                    <apex:inputFile fileName="{!fileName}" value="{!bodyName}" />
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>