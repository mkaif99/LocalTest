<apex:page controller="EnquiryController">
    <apex:sectionHeader title="Enquiry" />
    <apex:form >
        <apex:pageMessages ></apex:pageMessages>
        <apex:pageBlock >
            <apex:pageBlockButtons >
                <apex:commandButton value="Send" action="{!sendEnquiry}" />
            </apex:pageBlockButtons>
            <apex:pageBlockSection >
                <apex:pageBlockSectionItem >
                	<apex:outputLabel value="Enquiry For"></apex:outputLabel>
                    <apex:inputText value="{!EnquiryFor}" />
                </apex:pageBlockSectionItem>
            	<apex:pageBlockSectionItem >
                	<apex:outputLabel value="Enter First NAme"></apex:outputLabel>
                    <apex:inputText value="{!Fname}" />
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                	<apex:outputLabel value="Enter Last NAme"></apex:outputLabel>
                    <apex:inputText value="{!Lname}"/>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                	<apex:outputLabel value="Enter Email Id"></apex:outputLabel>
                    <apex:inputText value="{!EmailId}"/>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                	<apex:outputLabel value="Enter Phone No"></apex:outputLabel>
                    <apex:inputText value="{!Phone}"/>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
        </apex:pageBlock>
        
        <apex:pageBlock >
            <apex:pageBlockButtons >
            	<apex:commandButton value="Send" action="{!sendBulkEnquiry}" />
                <apex:commandButton value="Add Row" action="{!addRow}" />
            </apex:pageBlockButtons>
            <apex:pageBlockSection collapsible="false" columns="1">
            	<apex:pageBlockTable value="{!modalList}" var="cl" >
                    <apex:column headerValue="EnquiryFor">
                        <apex:inputText value="{!cl.EnquiryFor}" />
                    </apex:column>
                    <apex:column headerValue="FirstName">
                        <apex:inputText value="{!cl.Fname}" />
                    </apex:column>
                    <apex:column headerValue="LastName">
                        <apex:inputText value="{!cl.Lname}" />
                    </apex:column>
                    <apex:column headerValue="EmailId">
                        <apex:inputText value="{!cl.EmailId}" />
                    </apex:column>
                    <apex:column headerValue="Phone">
                        <apex:inputText value="{!cl.Phone}" />
                    </apex:column>
                </apex:pageBlockTable>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>