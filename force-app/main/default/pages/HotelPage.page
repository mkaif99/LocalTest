    <apex:form >	
        <apex:actionStatus id="act1">
        	<apex:facet name="start">
                <apex:outputPanel >
                    <apex:image value="/img/loading.gif" width="30" height="30" />
                    <apex:outputLabel value="Please wait...!" style="font-size:16px;color:red" ></apex:outputLabel>                    
                </apex:outputPanel>
            </apex:facet>
        </apex:actionStatus>
        <apex:actionFunction name="actOnClick" action="{!allRecordSelect}" status="act1" reRender="Zx" />
        <apex:actionFunction name="myfun" action="{!deleteRec}" />
        <apex:actionFunction name="myfun1" action="{!clickRec}" reRender="Zx" />
        <apex:actionFunction name="actOnPagesize1" action="{!selectPageSize}" />
        <apex:actionFunction name="actOnPageNum" action="{!getPageNumber}" />
        
       										 <!-- showing List , Searching , edit-->
        <apex:pageBlock rendered="{!!isEdit1}"> 
            <apex:pageBlockSection title="List of Customer" collapsible="false" columns="1" >
                                
                <apex:pageBlockSection columns="2" > 
                        Select No. &nbsp; : &nbsp; <apex:selectList value="{!pageSize}" onchange="actOnPagesize1();return false;" size="1" >
                        <apex:selectOptions value="{!pageSizeList}" ></apex:selectOptions>
                        </apex:selectList> 
                </apex:pageBlockSection>
                							    	<!-- for searching  -->
                <apex:commandButton value="Searching...!" action="{!searchClick}" /> 
                <apex:pageBlockSection rendered="{!Searching}">  
                        Search 1 : &nbsp;&nbsp;
                        <apex:selectList value="{!searchdata1}" size="1">
                            <apex:selectOption itemValue="" itemLabel="--none--"></apex:selectOption>
                            <apex:selectOption itemValue="First_Name__c" itemLabel="First Name"></apex:selectOption>
                            <apex:selectOption itemValue="Last_Name__c" itemLabel="Last Name"></apex:selectOption>
                            <apex:selectOption itemValue="City__c" itemLabel="City"></apex:selectOption>
                        </apex:selectList> &nbsp;&nbsp;  
                        Search Criteria : &nbsp;&nbsp;&nbsp;&nbsp;
                        <apex:inputText value="{!searchCriteria1}" />
                   
                        Search 2 : &nbsp;&nbsp;
                        <apex:selectList value="{!searchdata2}" size="1">
                            <apex:selectOption itemValue="" itemLabel="--none--"></apex:selectOption>
                            <apex:selectOption itemValue="First_Name__c" itemLabel="First Name"></apex:selectOption>
                            <apex:selectOption itemValue="Last_Name__c" itemLabel="Last Name"></apex:selectOption>
                            <apex:selectOption itemValue="City__c" itemLabel="City"></apex:selectOption>
                        </apex:selectList> &nbsp;&nbsp;
                        Search Criteria : &nbsp;&nbsp;&nbsp;&nbsp;
                        <apex:inputText value="{!searchCriteria2}" />
                   
                        Search 3 : &nbsp;&nbsp;
                        <apex:selectList value="{!searchdata3}" size="1">
                            <apex:selectOption itemValue="" itemLabel="--none--"></apex:selectOption>
                            <apex:selectOption itemValue="First_Name__c" itemLabel="First Name"></apex:selectOption>
                            <apex:selectOption itemValue="Last_Name__c" itemLabel="Last Name"></apex:selectOption>
                            <apex:selectOption itemValue="City__c" itemLabel="City"></apex:selectOption>
                        </apex:selectList> &nbsp;&nbsp;
                        Search Criteria : &nbsp;&nbsp;&nbsp;&nbsp;
                        <apex:inputText value="{!searchCriteria3}" />
                   
                    <apex:commandButton value="Go.." action="{!searchData}" />
                </apex:pageBlockSection>
                									<!-- for showing Button -->
                <apex:commandButton value="New Record" onclick="openBox();return false;" style="float:left" rendered="{!!isEdit1 || !Searching}"/>
                <apex:commandButton value="Edit All" action="{!editAll}" rendered="{!!isEdit1 || !Searching}"/>
                
                									<!-- for showing List -->
                <apex:pageBlockTable value="{!hotelList}" var="cl" id="Zx" >
                    <apex:column >
                        <apex:facet name="header" >
                            <apex:inputCheckbox value="{!allSelect}" onchange="actOnClick();return false;" />
                        </apex:facet>
                        <apex:inputCheckbox value="{!cl.selectStatus}"  />
                    </apex:column>                
                    <apex:column headerValue="Action" >
                        <apex:outputPanel rendered="{!cl.rowNum != Index}">
                            <apex:commandLink value="Edit" action="{!editRecord}" >
                                <apex:param name="E1" value="{!cl.rowNum}" assignTo="{!Index}" />
                            </apex:commandLink>&nbsp;|&nbsp;
                            <apex:commandLink value="Del" onclick="deleteConfirm();return false;" >
                                <apex:param name="E1" value="{!cl.rowNum}"  assignTo="{!Index}" />
                            </apex:commandLink> 
                        </apex:outputPanel>
                        <apex:outputPanel rendered="{!cl.rowNum == Index}" >
                            <apex:commandLink value="Save" action="{!newRecord}" />&nbsp;|&nbsp;
                            <apex:commandLink value="Can" action="{!cancelRec}" />
                        </apex:outputPanel>
                    </apex:column>
                    <apex:column value="{!cl.rowNum}" headerValue="RowNo" />
                    <apex:column headerValue="Hotel Customer">
                        <apex:commandLink value="{!cl.hotelObj.name}"  onclick="openBox1();return false;" >
                            <apex:param name="E1" value="{!cl.hotelObj.id}" assignTo="{!IdIndex}" />
                        </apex:commandLink>                    
                    </apex:column>
                    <apex:column headerValue="First Name" >
                        <apex:inputField value="{!cl.hotelObj.First_Name__c}" rendered="{!cl.rowNum == Index}" />   <!-- for showing Edit on its place -->
                        <apex:outputField value="{!cl.hotelObj.First_Name__c}" rendered="{!cl.rowNum != Index}" />
                    </apex:column>
                    <apex:column headerValue="Last Name">
                        <apex:inputField value="{!cl.hotelObj.Last_Name__c}" rendered="{!cl.rowNum == Index}" />
                        <apex:outputField value="{!cl.hotelObj.Last_Name__c}" rendered="{!cl.rowNum != Index}" />
                    </apex:column>
                    <apex:column headerValue="Gender" >
                        <apex:inputField value="{!cl.hotelObj.Gender__c}" rendered="{!cl.rowNum == Index}" />
                        <apex:outputField value="{!cl.hotelObj.Gender__c}" rendered="{!cl.rowNum != Index}" />
                    </apex:column>
                    <apex:column headerValue="Phone No">
                        <apex:inputField value="{!cl.hotelObj.Phone_No__c}" rendered="{!cl.rowNum == Index}" />
                        <apex:outputField value="{!cl.hotelObj.Phone_No__c}" rendered="{!cl.rowNum != Index}" />
                    </apex:column>
                    <apex:column headerValue="State" >
                        <apex:inputField value="{!cl.hotelObj.State__c}" rendered="{!cl.rowNum == Index}" />
                        <apex:outputField value="{!cl.hotelObj.State__c}" rendered="{!cl.rowNum != Index}" />
                    </apex:column>
                    <apex:column headerValue="City">
						<apex:inputField value="{!cl.hotelObj.City__c}" rendered="{!cl.rowNum == Index}" />
                        <apex:outputField value="{!cl.hotelObj.City__c}" rendered="{!cl.rowNum != Index}" />
					</apex:column> 
                </apex:pageBlockTable>
            </apex:pageBlockSection>
        <br/>
        <br/>
            										<!-- Pagination -->
            <apex:outputPanel style="margin-left:40%;" >
                <apex:commandLink value="First (|<<)" action="{!firstpage}" />
                <apex:commandLink value="Prev (<<)" action="{!prevpage}" />
                <apex:commandLink value="Next (>>)" action="{!nextpage}" />
                <apex:commandLink value="Last (>>|)" action="{!lastpage}" />
            </apex:outputPanel>
            <apex:outputPanel style="float:right;" >
                Select Page&nbsp;:&nbsp;<apex:inputText value="{!pageNum}" size="1" onchange="actOnPageNum();return; false;" />&nbsp;&nbsp;{!totalPage}
            </apex:outputPanel>
        </apex:pageBlock>
        											
        											<!-- Bulk Edit -->
		<apex:pageBlock title="EditPages" rendered="{!isEdit1}" >
        	<apex:pageBlockButtons >
            	<apex:commandButton value="Save" action="{!saveEdit}" />
                <apex:commandButton value="Can" action="{!cancelEdit}" />
            </apex:pageBlockButtons>
            <apex:pageBlockTable value="{!edithotelList}" var="ed">
                <apex:column headerValue="First Name" >
                	<apex:inputField value="{!ed.First_Name__c}" />
                </apex:column>
                <apex:column headerValue="Last Name" >
                	<apex:inputField value="{!ed.Last_Name__c}" />
                </apex:column>
                <apex:column headerValue="Gender" >
                	<apex:inputField value="{!ed.Gender__c}" />
                </apex:column>
                <apex:column headerValue="Phone No" >
                	<apex:inputField value="{!ed.Phone_No__c}" />
                </apex:column>
				<apex:column headerValue="State" >
                	<apex:inputField value="{!ed.State__c}" />
                </apex:column>
				<apex:column headerValue="City" >
                	<apex:inputField value="{!ed.City__c}" />
                </apex:column>
            </apex:pageBlockTable>
        </apex:pageBlock> 
    </apex:form>
</apex:page>