    </div>
    <div id="myBox1" title="My Custom Dialog" >
        <apex:form >
            <apex:pageBlock title="Hotel Customer" >		
                <apex:pageBlockSection columns="1"> 
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel >First Name :</apex:outputLabel>
                        <apex:outputField value="{!hObj.First_Name__c}" />
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel >Last Name :</apex:outputLabel>
                        <apex:outputField value="{!hObj.Last_Name__c}" />
