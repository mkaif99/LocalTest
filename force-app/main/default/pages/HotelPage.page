                    <apex:commandButton value="Save" action="{!newRecord}" />
                </apex:pageBlockButtons>
                <apex:pageBlockSection columns="1"> 
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel >First Name :</apex:outputLabel>
                        <apex:inputField value="{!hObj.First_Name__c}" />
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel >Last Name :</apex:outputLabel>
                        <apex:inputField value="{!hObj.Last_Name__c}" />
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel >Gender :</apex:outputLabel>
                        <apex:inputField value="{!hObj.Gender__c}" />
                        <!--  <apex:outputLabel>Gender :</apex:outputLabel>
								<apex:inputText value="{!hObj.Gender__c}" />	-->
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel >Phone No :</apex:outputLabel>
                        <apex:inputField value="{!hObj.Phone_No__c}" />
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel >State :</apex:outputLabel>
