    <script>
        $( function() {
            $( "#myBox").dialog({autoOpen : false, width: 400, show : {effect : "explode", duration : 2000}, hide : {duration : 2000,effect : "blind"}});
        } );	
   
    	function openBox(){
        	$("#myBox").dialog("open");
        }
    
    	$( function() {
            $( "#myBox1").dialog({autoOpen : false, show : {effect : "explode", duration : 2000}, hide : {duration : 2000,effect : "blind"}});
        } );	
   
    	function openBox1(){
            myfun1();
        	$("#myBox1").dialog("open");
        }
		function deleteConfirm(){
        	let ans = confirm("Are You Sure...!");
            if(ans == true){
                alert("You can Delete");
                myfun();
            }
            else			alert("Nhi kr skte");
        }    
    </script>
    									<!-- for Insert page-->
    <div id="myBox" title="My Custom Dialog" >
